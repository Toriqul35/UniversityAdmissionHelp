@model WebApplication_04.Models.PostViewModel

@{
    Html.RenderPartial("~/Views/Admin/_LayoutAdminView.cshtml");
}
@using (Html.BeginForm("PostAdmission", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div style="margin-left:300px;">
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group row">
            <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">Faculty Name</label>
            <div class="col-sm-10">
                @Html.EditorFor(model => model.PostType,new { htmlAttributes = new { @placeholder = "Name of faculty" } })
                @Html.ValidationMessageFor(model => model.PostType)
            </div>
        </div>
        <div class="form-group row">
            <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">University Name</label>
            <div class="col-sm-10">
                @Html.EditorFor(model => model.UniversityName,new { htmlAttributes = new { @placeholder = "University Name" } })
                @Html.ValidationMessageFor(model => model.UniversityName)
            </div>
        </div>

        <div class="form-group row">
            <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">Publish Date</label>
            <div class="col-sm-10">
                @Html.EditorFor(model => model.PostDate)
                @Html.ValidationMessageFor(model => model.PostDate)
            </div>
        </div>
        <div class="form-group row">
            <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">Start Of Apply</label>
            <div class="col-sm-10">
                @Html.EditorFor(model => model.StartTest)
                @Html.ValidationMessageFor(model => model.StartTest)
            </div>
        </div>

        <div class="form-group row">
            <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">End date for apply</label>
            <div class="col-sm-10">
                @Html.EditorFor(model => model.EndTest)
                @Html.ValidationMessageFor(model => model.EndTest)
            </div>
        </div>

        <div class="form-group row">
            <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">Total Seats</label>
            <div class="col-sm-10">
                @Html.EditorFor(model => model.TotalSeat,new { htmlAttributes = new { @placeholder = "Total Seats" } })
                @Html.ValidationMessageFor(model => model.TotalSeat)
            </div>
        </div>

        <div class="form-group row">
            <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">Upload File</label>
            <div>
                <input type="file" name="Files" accept=".pdf" required />

            </div>
        </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Publish" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}


