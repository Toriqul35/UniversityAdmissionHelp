<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Meta tags -->
    <title>AplyTests</title>
    <meta name="keywords" content="Study Application Form Responsive widget, Flat Web Templates, Android Compatible web template,
	Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- stylesheets -->
    <link href="~/Contents/CSS/Student/button.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Theme/Registration/css/style.css">
    <!-- google fonts  -->
    <link href="//fonts.googleapis.com/css?family=Roboto+Condensed:300,300i,400,400i,700,700i" rel="stylesheet">
    <link href="//fonts.googleapis.com/css?family=Josefin+Sans:300,400,400i,700" rel="stylesheet">
</head>

<body>

    <div class="w3ls-banner">
        <div class="heading">
            <h1>University Admissiom form</h1>
        </div>
        <div class="container">
            <div class="heading">
                <h2 style="color:crimson">Please fill Out Carefully for Admission</h2>
            </div>
            <div class="agile-form">
                <form action="@Url.Action("ApplyAdmission","Student")" method="post">
                    <ul class="field-list">
                        <li>
                            <label class="form-label">
                                Full Name
                                <span class="form-required"> * </span>
                            </label>
                            <div class="form-input">
                                <input type="text" name="FullName" placeholder="Enter your full Name ?" required>
                            </div>
                        </li>
                        <li>
                            <label class="form-label">
                                Father Name
                                <span class="form-required"> * </span>
                            </label>
                            <div class="form-input">
                                <input type="text" name="FatherName" placeholder=" Your father name ?" required>
                            </div>
                        </li>
                        <li>
                            <label class="form-label">
                                Mother Name
                                <span class="form-required"> * </span>
                            </label>
                            <div class="form-input">
                                <input type="text" name="MotherName" placeholder=" Your mother name ?" required>
                            </div>
                        </li>
                        <li>
                            <label class="form-label">
                                Date of Birth
                                <span class="form-required"> * </span>
                            </label>
                            <div class="form-input dob">
                                <span class="form-sub-label">
                                    <select name="day" class="day">
                                        <option>--Select--</option>
                                        <option value="1"> 1 </option>
                                        <option value="2"> 2 </option>
                                        <option value="3"> 3 </option>
                                        <option value="4"> 4 </option>
                                        <option value="5"> 5 </option>
                                        <option value="6"> 6 </option>
                                        <option value="7"> 7 </option>
                                        <option value="8"> 8 </option>
                                        <option value="9"> 9 </option>
                                        <option value="10"> 10 </option>
                                        <option value="11"> 11 </option>
                                        <option value="12"> 12 </option>
                                        <option value="13"> 13 </option>
                                        <option value="14"> 14 </option>
                                        <option value="15"> 15 </option>
                                        <option value="16"> 16 </option>
                                        <option value="17"> 17 </option>
                                        <option value="18"> 18 </option>
                                        <option value="19"> 19 </option>
                                        <option value="20"> 20 </option>
                                        <option value="21"> 21 </option>
                                        <option value="22"> 22 </option>
                                        <option value="23"> 23 </option>
                                        <option value="24"> 24 </option>
                                        <option value="25"> 25 </option>
                                        <option value="26"> 26 </option>
                                        <option value="27"> 27 </option>
                                        <option value="28"> 28 </option>
                                        <option value="29"> 29 </option>
                                        <option value="30"> 30 </option>
                                        <option value="31"> 31 </option>
                                    </select>
                                    <label class="form-sub-label1"> Day </label>
                                </span>
                                <span class="form-sub-label">
                                    <select name="month" >
                                        <option>--Select--</option>
                                        <option value="January"> January </option>
                                        <option value="February"> February </option>
                                        <option value="March"> March </option>
                                        <option value="April"> April </option>
                                        <option value="May"> May </option>
                                        <option value="June"> June </option>
                                        <option value="July"> July </option>
                                        <option value="August"> August </option>
                                        <option value="September"> September </option>
                                        <option value="October"> October </option>
                                        <option value="November"> November </option>
                                        <option value="December"> December </option>
                                    </select>
                                    <label class="form-sub-label1"> Month </label>
                                </span>
                                <span class="form-sub-label">
                                    <input type="text" class="year" name="year" placeholder=" Enter Year" required>
                                    <label class="form-sub-label1"> Year </label>
                                </span>
                            </div>
                        </li>
                        <li>
                            <label class="form-label">
                                Gender
                                <span class="form-required"> * </span>
                            </label>
                            <div class="form-input">
                                <select class="form-dropdown" name="Gender" required>
                                    <option value="">--Select--</option>
                                    <option value="Male"> Male </option>
                                    <option value="Female"> Female </option>

                                </select>
                            </div>
                        </li>
                        <li>
                            <label class="form-label">
                                E-Mail Address
                                <span class="form-required"> * </span>
                            </label>
                            <div class="form-input">
                                <input type="email" name="Email" placeholder=" Enter your email address?" required>

                            </div>
                        </li>

                        <li>
                            <label class="form-label">
                            Cell Number
                                <span class="form-required"> * </span>
                            </label>
                            <div class="form-input add">
                                <span class="form-sub-label">
                                    <input type="text" name="Contact" placeholder="Your mobile number ?" required>
                                    <label class="form-sub-label1">Mobile </label>
                                </span>
                                <span class="form-sub-label">
                                    <input type="text" name="telephone" placeholder="Optional " required>
                                    <label class="form-sub-label1">Telephone </label>
                                </span>
                            </div>
                                @*<div class="form-input">
                                    <input type="tel" name="Contact" min="11" max="11" placeholder="" required>
                                </div>*@
                             
                        </li>

                        <li>
                            <label class="form-label">
                                Address
                                <span class="form-required"> * </span>
                            </label>
                            <div class="form-input add">
                                <span class="form-sub-label">
                                    <input type="text" name="Address1" placeholder="Street lline 1 ?" required>
                                    <label class="form-sub-label1"> Street Address </label>
                                </span>
                                <span class="form-sub-label">
                                    <input type="text" name="Address2" placeholder=" Street lline 2 ?" required>
                                    <label class="form-sub-label1"> Street Line 2 </label>
                                </span>
                                <span class="form-sub-label">
                                    <input type="text" name="City" placeholder=" Name of City ?" required>
                                    <label class="form-sub-label1"> City </label>
                                </span>
                                <span class="form-sub-label">
                                    <input type="text" name="State" placeholder="Name of Area ?" required>
                                    <label class="form-sub-label1"> State / Province </label>
                                </span>
                                <span class="form-sub-label">
                                    <input type="text" name="Zipcode" placeholder="Area Code ?" required>
                                    <label class="form-sub-label1"> Postal / Zip Code </label>
                                </span>
                                <span class="form-sub-label">
                                    <input type="text" name="Country" placeholder="Your Country ?" required>
                                    <label class="form-sub-label1"> Country </label>
                                </span>
                            </div>
                        </li>
                        <li>
                            <label class="form-label">
                                Type Of Major
                                <span class="form-required"> * </span>
                            </label>
                          <div class="form-input">
                                <select class="form-dropdown" name="TypeOfMajor" required>
                                    <option value="">--Select--</option>
                                    <option> Major Of Sceience</option>
                                    <option> Major Of Business </option>
                                    <option> Major Of Humanities </option>

                                </select>
                            </div>
                        </li>

                    </ul>

                    <input type="submit" value="Next Step">
                    @if (ViewBag.Message != null)
                    {
                        <h2>
                            <b>
                                @ViewBag.Message
                            </b>
                        </h2>
                   
                    <a href="~/Student/MajorOfSceience"> <input type="button" class="button" value=" Faculty Of Sceience" /></a>
                    <a href="~/Student/MajorOfBusiness"> <input type="button"class="button2"value=" Faculty Of Business" /></a>
                    <a href="~/Student/MajorOfHuminties"> <input type="button" class="button3"value=" Faculty Of Humanities" /></a>
                      }
                   
                </form>

            </div>
        </div>
        <div class="copyright">
            <p>© 2019  All rights reserved | Design by  Md Toriqul Islam</p>
        </div>
    </div>


</body>
</html>